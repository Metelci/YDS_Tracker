<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:clickable="true"
    android:focusable="true"
    android:transitionName="settings_category"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:rippleColor="?attr/colorPrimary"
    app:strokeWidth="0dp"
    style="@style/Widget.Material3.CardView.Elevated">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:gravity="center"
        android:minHeight="120dp">

        <!-- Category Icon -->
        <ImageView
            android:id="@+id/category_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginBottom="12dp"
            android:contentDescription="@string/category_icon_description"
            app:tint="?attr/colorPrimary"
            tools:src="@drawable/ic_privacy" />

        <!-- Category Title -->
        <TextView
            android:id="@+id/category_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:gravity="center"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
            android:textColor="?attr/colorOnSurface"
            android:maxLines="2"
            android:ellipsize="end"
            tools:text="Privacy & Data" />

        <!-- Category Description -->
        <TextView
            android:id="@+id/category_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.Material3.BodySmall"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:maxLines="2"
            android:ellipsize="end"
            android:lineSpacingMultiplier="1.2"
            tools:text="Control your privacy settings and data usage" />

        <!-- Active Indicator (optional, for future use) -->
        <View
            android:id="@+id/active_indicator"
            android:layout_width="24dp"
            android:layout_height="3dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/active_indicator_background"
            android:visibility="gone"
            app:tint="?attr/colorPrimary" />

    </LinearLayout>

    <!-- Selection Overlay (for active state) -->
    <View
        android:id="@+id/selection_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/selection_overlay_color"
        android:visibility="gone"
        android:alpha="0.1" />

</com.google.android.material.card.MaterialCardView>