<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="4dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="1dp"
    app:strokeWidth="0dp"
    app:cardBackgroundColor="?attr/colorSurfaceContainerLow"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Setting Type Icon -->
        <ImageView
            android:id="@+id/setting_type_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_toggle_on"
            android:contentDescription="Setting type"
            app:tint="?attr/colorPrimary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/ic_toggle_on" />

        <!-- Relevance Indicator -->
        <View
            android:id="@+id/relevance_indicator"
            android:layout_width="4dp"
            android:layout_height="0dp"
            android:background="?attr/colorPrimary"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/setting_type_icon"
            app:layout_constraintStart_toEndOf="@+id/setting_type_icon"
            app:layout_constraintTop_toTopOf="@+id/setting_type_icon" />

        <!-- Setting Title -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/setting_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            android:textAppearance="?attr/textAppearanceBodyLarge"
            android:textColor="?attr/colorOnSurface"
            android:fontFamily="@font/inter_medium"
            android:maxLines="2"
            android:ellipsize="end"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/relevance_indicator"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Push Notifications" />

        <!-- Setting Description -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/setting_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:textAppearance="?attr/textAppearanceBodyMedium"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:fontFamily="@font/inter_regular"
            android:maxLines="3"
            android:ellipsize="end"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/relevance_indicator"
            app:layout_constraintTop_toBottomOf="@+id/setting_title"
            tools:text="Receive notifications on your device for study reminders and achievements" />

        <!-- Category Path -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/category_path"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:textAppearance="?attr/textAppearanceBodySmall"
            android:textColor="?attr/colorPrimary"
            android:fontFamily="@font/inter_medium"
            android:maxLines="1"
            android:ellipsize="end"
            android:drawablePadding="4dp"
            app:drawableStartCompat="@drawable/ic_folder"
            app:drawableTint="?attr/colorPrimary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/relevance_indicator"
            app:layout_constraintTop_toBottomOf="@+id/setting_description"
            tools:text="Notifications" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>