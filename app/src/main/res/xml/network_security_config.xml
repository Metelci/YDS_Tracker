<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Temel ağ güvenliği yapılandırması -->

    <!-- Ana domain güvenliği -->
    <domain-config cleartextTrafficPermitted="false">
        <!-- OSYM API güvenliği -->
        <domain includeSubdomains="true">ais.osym.gov.tr</domain>
        <domain includeSubdomains="true">www.osym.gov.tr</domain>

        <!-- Güvenilir CDN'ler -->
        <domain includeSubdomains="true">cdn.jsdelivr.net</domain>
        <domain includeSubdomains="true">fonts.googleapis.com</domain>
        <domain includeSubdomains="true">fonts.gstatic.com</domain>

        <!-- Pin sertifika hash'leri (gerçek ortamda güncellenmeli) -->
        <pin-set expiration="2025-01-01">
            <!-- OSYM sertifika pin'i - gerçek hash ile değiştirilmeli -->
            <pin digest="SHA-256">AAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAA=</pin>
        </pin-set>
    </domain-config>

    <!-- Debug yapılandırması - sadece development'ta aktif -->
    <debug-overrides>
        <trust-anchors>
            <!-- Development için user certificates'ları güven -->
            <certificates src="user" />
            <!-- System certificates'ları güven -->
            <certificates src="system" />
        </trust-anchors>
    </debug-overrides>

    <!-- Base configuration - tüm bağlantılar için -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <!-- Sistem güvenilen sertifika yetkilileri -->
            <certificates src="system" />
            <!-- User-installed sertifikalar (development için) -->
            <certificates src="user" overridingPins="true" />
        </trust-anchors>
    </base-config>

</network-security-config>