<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Basic network security configuration -->

    <!-- Main domain security -->
    <domain-config cleartextTrafficPermitted="false">
        <!-- OSYM API security -->
        <domain includeSubdomains="true">ais.osym.gov.tr</domain>
        <domain includeSubdomains="true">www.osym.gov.tr</domain>

        <!-- Trusted CDNs -->
        <domain includeSubdomains="true">cdn.jsdelivr.net</domain>
        <domain includeSubdomains="true">fonts.googleapis.com</domain>
        <domain includeSubdomains="true">fonts.gstatic.com</domain>

        <!-- Pin certificate hashes (updated with real pins and expiration) -->
        <pin-set expiration="2026-12-31">
            <!-- OSYM certificate pin - updated with real hash -->
            <pin digest="SHA-256">4a6cPehI7JG923Nwvzn0EoBtcGGqs3oQmWKWSF+gKD4=</pin>
            <!-- Backup pin - critical for certificate rotation -->
            <pin digest="SHA-256">Y9mvm0exBkEOvvaZgNEqy1wx1LXiOgtwT0M8LfKOtmI=</pin>
        </pin-set>
    </domain-config>

    <!-- Debug configuration - active only in development -->
    <debug-overrides>
        <trust-anchors>
            <!-- Trust user certificates for development -->
            <certificates src="user" />
            <!-- Trust system certificates -->
            <certificates src="system" />
        </trust-anchors>
    </debug-overrides>

    <!-- Base configuration - for all connections (production security) -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <!-- Only system trusted certificate authorities -->
            <certificates src="system" />
            <!-- User certificates pose security risk in production - removed -->
        </trust-anchors>
    </base-config>

</network-security-config>