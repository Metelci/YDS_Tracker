<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.StudyPlan" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>

        <!-- Material 3 color attributes for compatibility -->
        <item name="colorSurface">@color/md_theme_light_surface</item>
        <item name="colorOnSurface">@color/md_theme_light_onSurface</item>
        <item name="colorOnSurfaceVariant">@color/md_theme_light_onSurfaceVariant</item>
        <item name="colorPrimaryContainer">@color/md_theme_light_primaryContainer</item>
        <item name="colorSurfaceVariant">@color/md_theme_light_surfaceVariant</item>
        <item name="colorOutline">@color/md_theme_light_outline</item>
        <item name="colorOnError">@android:color/white</item>
        <item name="colorOutlineVariant">@color/md_theme_light_outline</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorPrimary">@color/md_theme_light_primary</item>

        <!-- Text appearance attributes -->
        <item name="textAppearanceTitleLarge">@style/TextAppearance.Material3.TitleLarge</item>
        <item name="textAppearanceBodyLarge">@style/TextAppearance.Material3.BodyLarge</item>
        <item name="textAppearanceBodyMedium">@style/TextAppearance.Material3.BodyMedium</item>
        <item name="textAppearanceBodySmall">@style/TextAppearance.Material3.BodySmall</item>
        <item name="textAppearanceLabelMedium">@style/TextAppearance.Material3.LabelMedium</item>
    </style>

    <!-- Material 3 Text Appearances -->
    <style name="TextAppearance.Material3.HeadlineSmall" parent="@android:style/TextAppearance.Material.Headline">
        <item name="android:textSize">24sp</item>
        <item name="android:fontWeight">400</item>
    </style>

    <style name="TextAppearance.Material3.BodyLarge" parent="@android:style/TextAppearance.Material.Body1">
        <item name="android:textSize">16sp</item>
        <item name="android:fontWeight">400</item>
    </style>

    <style name="TextAppearance.Material3.BodyMedium" parent="@android:style/TextAppearance.Material.Body2">
        <item name="android:textSize">14sp</item>
        <item name="android:fontWeight">400</item>
    </style>

    <style name="TextAppearance.Material3.TitleMedium" parent="@android:style/TextAppearance.Material.Title">
        <item name="android:textSize">16sp</item>
        <item name="android:fontWeight">500</item>
    </style>

    <!-- Missing Material 3 Text Appearances -->
    <style name="TextAppearance.Material3.BodySmall" parent="@android:style/TextAppearance.Material.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:fontWeight">400</item>
    </style>

    <style name="TextAppearance.Material3.TitleLarge" parent="@android:style/TextAppearance.Material.Title">
        <item name="android:textSize">22sp</item>
        <item name="android:fontWeight">500</item>
    </style>

    <style name="TextAppearance.Material3.LabelMedium" parent="@android:style/TextAppearance.Material.Button">
        <item name="android:textSize">12sp</item>
        <item name="android:fontWeight">500</item>
    </style>

    <!-- Material 3 Button Styles -->
    <style name="Widget.Material3.Button" parent="@android:style/Widget.Material.Button">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:background">?attr/colorPrimary</item>
    </style>

    <style name="Widget.Material3.Button.IconButton" parent="@android:style/Widget.Material.Button.Borderless">
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="Widget.Material3.Button.OutlinedButton" parent="@android:style/Widget.Material.Button.Borderless">
        <item name="android:background">@drawable/search_view_background</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:padding">12dp</item>
    </style>
</resources>